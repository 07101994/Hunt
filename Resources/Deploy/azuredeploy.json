{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": { 
		"directory" : {
          "type": "string",
          "metadata": {
            "description": "The project directory."
          }
        },
		"subscription" : {
          "type": "string",
          "metadata": {
            "description": "Azure subscription."
          }
        },
		"resourceGroup" : {
          "type": "string",
          "metadata": {
            "description": "Azure resource group - new or current group."
          }
        },
		"resourceGroupName" : {
          "type": "string",
          "metadata": {
            "description": "Azure resource group name."
          }
        },
		"siteName" : {
          "type": "string",
          "metadata": {
            "description": "The name of the site endpoint."
          }
        },
		"siteLocation" : {
          "type": "string",
          "metadata": {
            "description": "The location/region of the app site."
          }
        },
		"sku" : {
          "type": "string",
          "metadata": {
            "description": "The pricing tier."
          }
        }
	},
    "parameters": {
	},
    "resources": [  
		{
			"type": "Microsoft.Web/serverfarms",
			"apiVersion": "2015-08-01",
			"name": "[parameters('siteName')]",
			"location": "[parameters('siteLocation')]",
			"sku": {
				"name": "[parameters('siteName')]",
				"tier": "[parameters('sku')]",
				"capacity": "0"
			},
			"properties": {
				"numberOfWorkers": 1
			}
		},
		{
			"apiVersion": "2015-08-01",
			"type": "Microsoft.Web/sites",
			"name": "[parameters('siteName')]",
			"location": "[parameters('siteLocation')]",
			"kind": "mobileapp",
			"properties": {
				"name": "[parameters('siteName')]",
				"serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('siteName'))]"
			},
			"dependsOn": [
				"[parameters('siteName')]"
			],
			"resources": [
				{
					"apiVersion": "2015-08-01",
					"name": "appsettings",
					"type": "config",
					"dependsOn": [
						"[parameters('siteName')]"
					],
					"properties": {
						"MS_MobileServiceName": "[parameters('siteName')]"
					}
				}
			]
		}
	],
    "outputs": {  }
}